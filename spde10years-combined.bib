@article {Cendoya2021.04.01.438042,
	author = {Cendoya, M. and Hubel, A. and Conesa, D. and Vicent, A.},
	title = {Barrier effects on the spatial distribution of {X}ylella fastidiosa in {A}licante, {S}pain},

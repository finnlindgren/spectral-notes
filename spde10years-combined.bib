	issn = {1573-1375},
	OPTurl = {https://doi.org/10.1007/s11222-018-9843-1},
	doi = {10.1007/s11222-018-9843-1},
	abstract = {Fractional Gaussian noise (fGn) is a stationary time series model with long-memory properties applied in various fields like econometrics, hydrology and climatology. The computational cost in fitting an fGn model of length n using a likelihood-based approach is \$\$\{\{{\textbackslash}mathcal \{O\}\}\}(n{\textasciicircum}\{2\})\$\$, exploiting the Toeplitz structure of the covariance matrix. In most realistic cases, we do not observe the fGn process directly but only through indirect Gaussian observations, so the Toeplitz structure is easily lost and the computational cost increases to \$\$\{\{{\textbackslash}mathcal \{O\}\}\}(n{\textasciicircum}\{3\})\$\$. This paper presents an approximate fGn model of \$\$\{\{{\textbackslash}mathcal \{O\}\}\}(n)\$\$computational cost, both with direct and indirect Gaussian observations, with or without conditioning. This is achieved by approximating fGn with a weighted sum of independent first-order autoregressive (AR) processes, fitting the parameters of the approximation to match the autocorrelation function of the fGn model. The resulting approximation is stationary despite being Markov and gives a remarkably accurate fit using only four AR components. Specifically, the given approximate fGn model is incorporated within the class of latent Gaussian models in which Bayesian inference is obtained using the methodology of integrated nested Laplace approximation. The performance of the approximate fGn model is demonstrated in simulations and two real data examples.},
	language = {en},
	number = {4},
	urldate = {2021-11-01},
	journal = {Stat. Comput.},
	fjournal = {Statistics and Computing},
	author = {Sørbye, Sigrunn H. and Myrvoll-Nilsen, Eirik and Rue, Håvard},
	month = jul,
	year = {2019},
	pages = {821--833}
}



@article{porcu_spatio-temporal_2016,
	title = {Spatio-{Temporal} {Covariance} and {Cross}-{Covariance} {Functions} of the {Great} {Circle} {Distance} on a {Sphere}},
